<section id="history-zone" class="history-zone">

  <div class="history-header flex navbar">
    <nav class="flex">
      <h2>Job History</h2>
    </nav>
    <span class="flex-spacer"></span>
    <nav class="show-import-area flex">
      Import file
      <a class="btn-floating bg-white btn-upload">
        <%= image_tag "upload.png" %>
      </a>
    </nav>
    <nav class="show-import-area flex">
      Download XML
      <%= link_to export_index_path, {id: 'export', class: 'btn-floating bg-white', target: '_blank'} do %>
        <%= image_tag "download.png" %>
      <% end %>
    </nav>
  </div>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="left">Source File (CSV)</th>
          <th>Processed Date/Time</th>
          <th>Records processed</th>
          <th>Status</th>
          <th>Error report</th>
        </tr>
      </thead>
      <tbody>
        <% @history.each do |entry| %>
          <tr>
            <td class="left">
              <a href="/<%= entry.processed_file_path %>">
                <%= File.basename(entry.processed_file_path) %>
              </a>
            </td>
            <td><%= local_time(entry.updated_at, '%m/%d/%Y %l:%M%P') %></td>
            <td><%= entry.processed_records %></td>
            <td>
              <%= status_image(entry.status) %>
            </td>
            <td>
              <% if entry.status == 'warning' || entry.status == 'error' %>
                  <a href="#" class="error-report-icon" data-url="<%= entry.report_file_path %>"><%= image_tag "report.png" %></a>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="left">Last update: <%= local_time_ago(@history.first.updated_at) %></td>
          <td colspan="2"><%= paginate @history, window: 2 %></td>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="modal fade" id="error-report-modal" tabindex="-1" role="dialog" aria-labelledby="error-report-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h3 class="modal-title" id="error-report-modal-title">Error report</h3>
          <p>Here is a list of errors found when we imported your file</p>
        </div>
        <div id="error-report-modal-body">
          <textarea readonly="true" rows="10" class="error-report-modal-body-content"></textarea>
        </div>
      </div>
    </div>
  </div>

</section>
