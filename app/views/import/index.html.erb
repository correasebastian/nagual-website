<div id="title-section">
  <h1>Import files into Nagual</h1>
  <h3>Drag and drop a CSV file to the space below</h3>


<div id="import-box">
      
  <div id="import-area" class="import-area-browse">
    <p class="copy">Drag your CSV file here or <a id="file-browse" href="#">click to browse</a></p>
    <%= form_tag({action: :upload}, multipart: true) do %>
      <%= file_field_tag 'import-file', style: 'display: none' %>
    <% end %>
  </div>

    <div id="importStatus" class="active">
        <h2></h2>
        <p></p>

        <div class="loadFile">
          <div class="nameFile"></div>
          <div class="fileIcon"></div>
        </div>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
            <span>100%</span>
          </div>
        </div>
      </div>
</div>
    
  <div id="import-area-hide">
    <p class="copy">Hide</p>
  </div>

  <div class="container">
    <h2>History</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>File</th>
          <th>Timestamp</th>
          <th>Records processed</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>products.csv</td>
          <td>11/11/2016 11:11 am</td>
          <td>15</td>
<!--          <td><%= image_tag "check.svg" %></td>-->
          <td><%= content_tag :div, nil, :class => 'errorIcon' %></td>
          <td><%= content_tag :div, nil, :class => 'reportIcon' %></td>
        </tr>
        <tr>
          <td>variants.csv</td>
          <td>11/12/2016 12:11 am</td>
          <td>1215</td>
          <td><%= content_tag :div, nil, :class => 'alertIcon' %></td>
          <td><%= content_tag :div, nil, :class => 'reportIcon' %></td>
        </tr>
        <tr>
          <td>products.csv</td>
          <td>12/12/2016 09:32 pm</td>
          <td>2655</td>
          <td><%= content_tag :div, nil, :class => 'successIcon' %></td>
          <td><%= content_tag :div, nil, :class => 'reportIcon' %></td>
        </tr>
    </table>
  </div>
</div>
